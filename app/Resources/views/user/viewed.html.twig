{# app/Resources/views/user/serials.html.twig #}

{% extends "layout.html.twig" %}

{% block mainContentStyle %}viewed{% endblock %}

{% block mainContent %}
<div class="items-container col-xs-12">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col" class="count">#</th>
            <th scope="col" class="name">Название</th>
            <th scope="col">Год</th>
            <th scope="col">Рейтинг</th>
            <th scope="col">Статус</th>
        </tr>
        </thead>
        <tbody>
        {% for i in range(1, 10) %}
        <tr>
            <td class="column count col-xs-2">{{ i }}</td>
            <td class="column name col-xs-4">Название сериала</td>
            <td class="column col-xs-2">2014</td>
            <td class="column col-xs-2">8.7</td>
            <td class="column col-xs-2">Смотрю</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}