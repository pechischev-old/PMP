{# app/Resources/views/admin/createSerial.html.twig #}

{% extends "layout.html.twig" %}

{% block mainContentStyle %}create-serial{% endblock %}

{% block mainContent %}
<form method="post">
    <div class="serial-info-block col-md-12 col-xs-12">
        <div class="form-horizontal">
            <div class="image-container col-xs-4">
                <img>
            </div>
            <div class="form-block col-xs-10">
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="form-group__form-item">Название</label>
                        <input type="text" class="form-control" name="tilte">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="form-group__form-item">Описание</label>
                        <textarea class="form-control" name="description" rows="4"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="form-group__form-item">Год выпуска</label>
                        <input type="text" class="form-control" pattern="(19|20)[0-9]*" maxlength="4" name="start-year">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-group__form-item">Год завершения</label>
                        <input type="text" pattern="(19|20)[0-9]*" class="form-control" maxlength="4" name="end-year">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="form-group__form-item">Актеры</label>
                        <input class="form-control" name="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="form-group__form-item">Жанры</label>
                        <input class="form-control" name="">
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="ol-md-12">
            <button type="submit" class="btn btn-primary">Добавить</button>
            <button type="reset" class="btn btn-default">Сброс</button>
        </div>
    </div>
</form>
{% endblock %}