{# app/Resources/views/item-page/content.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Вход/регистрация{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/inputForm/style.css') }}" />
    <script type="text/javascript" src="{{ asset('js/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}

{% block showError %}
{% if error %}error{% endif %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="main-container row row-centered">

            <div class="content login {{ block('showError') }}">
                <div class="header col-md-12">
                    <div href="" id="login" class="header-block header-block_active col-md-6">
                        <div class="text-container">Войти</div>
                    </div>
                    <a href="{{ path("register") }}" id="registry" class="header-block col-md-6">
                        <div class="text-container">Регистрация</div>
                    </a>
                </div>
                <div class="input-form-container">
                    <div class="input-form col-md-12 login">
                        {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData) }}
                        </div>
                        {% endif %}
                        <form action="{{ path('login_check') }}" method="post" class="form">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label for="username">Имя пользователя:</label>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label for="username">Пароль:</label>
                                    <input type="password" id="password" name="_password" class="form-control"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-button col-sm-offset-1 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Войти</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}
