{# app/Resources/views/item-page/content.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Вход/регистрация{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/inputForm/style.css') }}" />
    <script type="text/javascript" src="{{ asset('js/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/inputForm/main.js') }}"></script>
{% endblock %}

{% block loginForm %}
    <div class="input-form col-md-12 login" style="display: none">
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="email" class="form-control" id="mail" placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="password" class="form-control" id="pass" placeholder="Пароль">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <div class="checkbox">
                        <input type="checkbox">
                        <label>Запомнить меня</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="input-button col-sm-offset-1 col-sm-10">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block registryForm %}
    <div class="input-form col-md-12 registry" style="display: none">
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="email" class="form-control" id="mail" placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="password" class="form-control" id="pass" placeholder="Пароль">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="password" class="form-control" id="pass" placeholder="Подтверждение пароля">
                </div>
            </div>

            <div class="form-group">
                <div class="input-button col-sm-offset-1 col-sm-10">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="main-container row row-centered">
            <div class="content">
                <div class="header col-md-12">
                    <div id="login" class="header-block header-block_active col-md-6">
                        <div class="text-container">Войти</div>
                    </div>
                    <div id="registry" class="header-block col-md-6">
                        <div class="text-container">Регистрация</div>
                    </div>
                </div>
                <div class="input-form-container">
                    {{ block("loginForm") }}
                    {{ block("registryForm") }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}
